
@model RegionalShop.ViewModels.ManageCredentialsViewModel
@using RegionalShop.Infrastructure

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManageLayout.cshtml"; }


<hr />
<h2 style="margin-bottom: 30px">Twoje dane</h2>

@using (@Html.BeginForm("ChangeProfile", "Manage"))
{
@Html.AntiForgeryToken()

                <div style="text-align: center;">
                    <table id="userdata-address-table">
                        <tr>
                            <td>@Html.LabelFor(o => o.DaneUzytkownika.DaneUzytkownika.Imie, "Imię:")</td>
                            <td>@Html.TextBoxFor(o => o.DaneUzytkownika.DaneUzytkownika.Imie)</td>
                            <td>@Html.ValidationMessageFor(o => o.DaneUzytkownika.DaneUzytkownika.Imie)</td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(o => o.DaneUzytkownika.DaneUzytkownika.Nazwisko, "Nazwisko")</td>
                            <td>@Html.TextBoxFor(o => o.DaneUzytkownika.DaneUzytkownika.Nazwisko)</td>
                            <td>@Html.ValidationMessageFor(o => o.DaneUzytkownika.DaneUzytkownika.Nazwisko)</td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(o => o.DaneUzytkownika.DaneUzytkownika.Adres, "Adres")</td>
                            <td>@Html.TextBoxFor(o => o.DaneUzytkownika.DaneUzytkownika.Adres)</td>
                            <td>@Html.ValidationMessageFor(o => o.DaneUzytkownika.DaneUzytkownika.Adres)</td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(o => o.DaneUzytkownika.DaneUzytkownika.Miejscowosc, "Miejscowosc")</td>
                            <td>@Html.TextBoxFor(o => o.DaneUzytkownika.DaneUzytkownika.Miejscowosc)</td>
                            <td>@Html.ValidationMessageFor(o => o.DaneUzytkownika.DaneUzytkownika.Miejscowosc)</td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(o => o.DaneUzytkownika.DaneUzytkownika.KodPocztowy, "Kod pocztowy")</td>
                            <td>@Html.TextBoxFor(o => o.DaneUzytkownika.DaneUzytkownika.KodPocztowy)</td>
                            <td>@Html.ValidationMessageFor(o => o.DaneUzytkownika.DaneUzytkownika.KodPocztowy)</td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(o => o.DaneUzytkownika.DaneUzytkownika.Telefon, "Numer telefonu")</td>
                            <td>@Html.TextBoxFor(o => o.DaneUzytkownika.DaneUzytkownika.Telefon)</td>
                            <td>@Html.ValidationMessageFor(o => o.DaneUzytkownika.DaneUzytkownika.Telefon)</td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(o => o.DaneUzytkownika.Email, "Adres e-mail")</td>
                            <td>@Html.TextBoxFor(o => o.DaneUzytkownika.Email)</td>
                            <td>@Html.ValidationMessageFor(o=>o.DaneUzytkownika.Email)</td>
                        </tr>
                        <tr style="text-align: right;">
                            <td></td>
                            <td colspan="3" style="padding-right:15px">
                                <div class="checkbox" style="margin-bottom: 10px;">
                                </div>

                                <input type="submit" value="Potwierdź" class="submitLink" style="height: 40px; text-align:center;color:white" />

                            </td>
                        </tr>
                    </table>
                </div>}

<hr />
<h2 style="margin-bottom: 30px">Zmiana hasła</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post))
{
@Html.AntiForgeryToken()

                <div class="manage-error">
                    @Html.ValidationMessage("password-error", "")
                </div> if (Model.Message.HasValue)
                {
<div class="manage-message">
    @switch (Model.Message)
    {
        case RegionalShop.Controllers.ManageController.ManageMessageId.ChangePasswordSuccess:
@: Hasło zmienione pomyślnie!
break;
case RegionalShop.Controllers.ManageController.ManageMessageId.Error:
@: Wystąpił błąd
break;
}
</div> }

<table id="password-table" style="margin-left: auto; margin-right: auto;margin-bottom:140px">
    <tr>
        <td>@Html.LabelFor(o => o.ChangePasswordViewModel.OldPassword, "Stare hasło:")</td>
        <td>
            @Html.PasswordFor(o => o.ChangePasswordViewModel.OldPassword)
            <div class="login-validation-message">
                @Html.ValidationMessageFor(o => o.ChangePasswordViewModel.OldPassword)
            </div>
        </td>
    </tr>
    <tr>
        <td>@Html.LabelFor(o => o.ChangePasswordViewModel.NewPassword, "Nowe hasło:")</td>
        <td>
            @Html.PasswordFor(o => o.ChangePasswordViewModel.NewPassword)
            <div class="login-validation-message">
                @Html.ValidationMessageFor(o => o.ChangePasswordViewModel.NewPassword)
            </div>
        </td>
    </tr>
    <tr>
        <td>@Html.LabelFor(o => o.ChangePasswordViewModel.ConfirmPassword, "Potwierdź hasło:")</td>
        <td>
            @Html.PasswordFor(o => o.ChangePasswordViewModel.ConfirmPassword)
            <div class="login-validation-message">
                @Html.ValidationMessageFor(o => o.ChangePasswordViewModel.ConfirmPassword)
            </div>
        </td>
    </tr>
    <tr style="text-align: center;">
        <td></td>
        <td colspan="3">
            <div class="checkbox" style="margin-bottom: 10px;">
            </div>

            <input type="submit" value="Zmień" class="submitLink" style="height: 40px;text-align:center;color:white;" />
        </td>
    </tr>
</table>}

@section Scripts
            {
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
