<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    <link href="~/Content/Images/fav.png" rel="shortcut icon" type="image/x-icon" sizes="32x32"/>
    <meta name="viewport" content="width=device-width" />

    @System.Web.Optimization.Styles.Render("~/Content/themes/base/css")
</head>
<body>
    <header id="site-header">

        <div style="overflow:hidden; ">
            <a id="koszykHeaderLink" href="@Url.Content("~/")" style="float:left;margin-left:300px">
                <img src="~/Content/Images/glowna.png" style="width:170px;height:48px" />
            </a>
           

            <a id="koszykHeaderLink" href="@Url.Action("Index", "Koszyk")" style="padding-right:95px;">
                KOSZYK (<span id="koszyk-naglowek-ilosc-elementow">@Html.Action("PobierzIloscElementowKoszyka", "Koszyk")</span>)
                <span id="cart-header-logo"></span>
            </a>

            @Html.Partial("_LoginPartial")


        </div>
    </header>
   
          <a href="@Url.Content("~/")"style="margin-bottom:30px;">
           
              <img src="~/Content/Images/banner.png" style="width:1000px;padding-top:80px" />
          </a>
    


    <div>

        @RenderBody()
        


    </div>

    <footer id="footer">
        <nav>
            <ul>
                <li><a href="@Url.Action("StronyStatyczne","Home",new {nazwa="Onas"})" style="">O nas</a></li>
                <li><a href="@Url.Action("StronyStatyczne","Home",new {nazwa="Spolecznosc"})" style="">Społeczność</a></li>
                <li><a href="@Url.Action("StronyStatyczne","Home",new {nazwa="Opinie"})" style="">Opinie</a></li>
                <li><a href="@Url.Action("StronyStatyczne","Home",new {nazwa="Pomoc"})" Pomoc="">Pomoc</a></li>
                <li><a href="@Url.Action("StronyStatyczne","Home",new {nazwa="Regulamin"})" style="">Regulamin</a></li>
                <li><a href="@Url.Action("StronyStatyczne","Home",new {nazwa="Kontakt"})" style="">Kontakt</a></li>
            </ul>
        </nav>
        <div id="footerLogo">
        </div>
        <div id="footerCopyright">
            Copyright &copy; RegionalShop
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>
<script src="~/Scripts/header.js"></script>